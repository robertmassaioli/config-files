       , template = "%multicpu% | %memory% * %swap% | %StdinReader% }{ %mpd% | <fc=#d843e1>%eth0%</fc> - <fc=#d843e1>%wlan0wi%</fc> | <fc=#ee9a00>%date%</fc> | %battery%"
       }
