Config { font = "-misc-fixed-*-*-*-*-10-*-*-*-*-*-*-*"
       , bgColor = "black"
       , fgColor = "grey"
       , position = Top
       , lowerOnStart = True
       , commands = [ Run Network "eth0" ["-L","0","-H","32","--normal","green","--high","red"] 10
                    , Run Wireless "wlan0" ["--template","<essid> <quality>"] 10
                    , Run MultiCpu [
                                        "-L","3",
                                        "-H","60",
                                        "--normal","green",
                                        "--high","red",
                                        "--template", "Cpu0: <total0> Cpu1: <total1>"
                                   ] 10
                    , Run Memory    [
                                        "-t","Mem: <used>/<total> (<usedratio>%)"
                                        , "-L", "400"
                                        , "-H", "1500"
                                        , "--normal", "yellow"
                                        , "--high", "red"
                                        , "--low", "green"
                                    ] 10
                    , Run Swap [] 10
                    , Run Date "%a %b %_d %Y %p %I:%M:%S" "date" 10
                    , Run StdinReader
                    , Run Battery [
                                    "-L", "20",
                                    "-H", "80",
                                    "--low","red",
                                    "--normal","yellow",
                                    "--high","green"
                                  ] 30
                    , Run MPD ["-t","<fc=#00ff67>mpd: <title></fc> <fc=#00ceff>[<lapsed></fc><fc=#00b8ff>/</fc><fc=#005bff><length>]</fc> <statei>"] 10
                    ]
       , sepChar = "%"
